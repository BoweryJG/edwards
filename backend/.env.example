# Instagram DM Automation - Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Anthropic Claude AI
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# Facebook/Instagram API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_custom_webhook_verify_token
INSTAGRAM_PAGE_ID=your_instagram_business_page_id

# Server Configuration
PORT=3001
NODE_ENV=production

# OpenRouter API for AI Chat
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# Huggingface API for Voice AI (Whisper STT + TTS)
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxx

# Twilio Configuration for SMS
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# VoIP.ms Configuration
VOIPMS_USERNAME=your_voipms_username
VOIPMS_PASSWORD=your_voipms_api_password
VOIPMS_DID=your_voipms_phone_number
VOIPMS_ALLOWED_IPS=184.75.214.0/24,184.75.215.0/24

# Optional: Additional Settings
PRACTICE_NAME="Your Practice Name"
PRACTICE_PHONE="(XXX) XXX-XXXX"
PRACTICE_EMAIL="info@yourdomain.com"

# Security Settings (Production)
ALLOWED_ORIGINS=https://gregpedromd.com,https://www.gregpedromd.com
SESSION_SECRET=generate_a_random_string_here
JWT_SECRET=generate_another_random_string_here

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-backend-domain.com
ENABLE_TRANSCRIPTION=true

# Transcription Services (Optional)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
ASSEMBLY_AI_API_KEY=your_assembly_ai_key